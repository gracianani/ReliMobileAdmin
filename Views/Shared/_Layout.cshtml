<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- start: CSS -->
    <link href="/Content/themes/simpliq/css/bootstrap.css" rel="stylesheet" />
	<link href="/Content/themes/simpliq/css/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="/Content/Site.css" rel="stylesheet" type="text/css" />
	<link href="/Content/themes/simpliq/css/style.css" rel="stylesheet" />
	<link href="/Content/themes/simpliq/css/style-responsive.css" rel="stylesheet" />
	<link href="/Content/themes/simpliq/css/retina.css" rel="stylesheet" />
    <link href="/Content/themes/simpliq/css/datepicker.css" rel="Stylesheet" />
    <link href="/Content/themes/simpliq/css/daterangepicker.css" rel="Stylesheet" />
    <link href="/Content/themes/simpliq/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
	<!-- end: CSS -->
    @System.Web.Optimization.Scripts.Render("~/bundles/modernizr")
    @System.Web.Optimization.Scripts.Render("~/bundles/jquery")
    @System.Web.Optimization.Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)
    @System.Web.Optimization.Scripts.Render("~/bundles/simpliq")
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="navbar">
		<div class="navbar-inner">
			<div class="container-fluid">
				<a class="btn btn-navbar" data-toggle="collapse" data-target=".top-nav.nav-collapse,.sidebar-nav.nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</a>
				<a id="main-menu-toggle" class="hidden-phone open"><i class="icon-reorder"></i></a>		
				<div class="row-fluid">
				<a class="brand span2" href="/"><span class="brandLine1">北京热力集团</span><span class="brandLine2">手机平台管理系统</span></a>
				</div>		
				<!-- start: Header Menu -->
				<div class="nav-no-collapse header-nav">
					<ul class="nav pull-right">
						<!-- start: User Dropdown -->
						<li class="dropdown">
							<a class="btn account dropdown-toggle" data-toggle="dropdown" href="#">
								<div class="avatar"><img src="/Content/Images/avatar.jpg" alt="Avatar"></div>
								<div class="user">
									<span class="hello">您好!</span>
									<span class="name">@currentUserFullName</span>
								</div>
							</a>
							<ul class="dropdown-menu">
								<li class="dropdown-menu-title">
								</li>
                                <li><a href="/Accounts/UserProfile"><i class="icon-user"></i> 个人资料 </a></li>
								<li><a href="/Accounts/ChangePassword"><i class="icon-user"></i> 修改密码</a></li>
								<li><a href="/Accounts/LogOut"><i class="icon-off"></i> 退出登录</a></li>
							</ul>
						</li>
						<!-- end: User Dropdown -->
					</ul>
				</div>
				<!-- end: Header Menu -->
				
			</div>
		</div>
	</div>
    <div class="container-fluid-full">
		<div class="row-fluid" style="min-height:588px;">
            <!-- start: Main Menu -->
			@Html.Partial("SideMenu")
			<!-- end: Main Menu -->
            <!-- start: Content -->
			<div id="content" class="span10">
            @RenderBody()
			</div>
        </div>
        <div class="clearfix"></div>
		
		<footer>
			<p>
				<span style="text-align:left;float:left"></span>
				<span class="hidden-phone" style="text-align:right;float:right"></span>
			</p>

		</footer>
    </div>


</body>
</html>
