@model ReliMobileAdmin.Models.CreateMessageViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
    <div class="row-fluid">
    <h2>编辑新消息</h2>
    </div>
    <div class="row-fluid">
        <div class="box span12">
            <div class="box-header">
                <h2><i class="icon-edit"></i> 发送新消息 </h2>
            </div>
            <div class="box-content">
            
                @if (Model.IsCreated.HasValue)
                {
                    <div class="bs-callout bs-callout-danger">
                        <h4>消息已发送</h4>
                    </div>
                }
                @Html.ValidationSummary()
                

                @using (Html.BeginForm("Create", "Message", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="control-group">
                        <label class="control-label"> 请选择联系人 </label>
                        <div class="controls">
                            @Html.DropDownListFor(m => m.SelectedUserId, new SelectList(Model.Users, "UserId", "UserName"), "请选择联系人")
                            @Html.ValidationMessageFor(m => m.SelectedUserId)
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label"> 消息内容 </label>
                        <div class="controls">
                            @Html.TextAreaFor(m => m.Message, new { placeholder = "在这里编辑", @class = "diss-form", @style = "overflow:hidden;word-wrap:break-word;resize:horizontal;height:40px" })
                            @Html.ValidationMessageFor(m => m.Message)
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">发送</button>
                        @Html.ActionLink("返回消息列表", "Index", "", new {@class="btn"})
                    </div>
                }
            </div>
        </div>
    </div>
    
</div>